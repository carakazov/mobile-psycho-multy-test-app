<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lvAnswers"
        android:layout_width="294dp"
        android:layout_height="212dp"
        android:layout_below="@+id/twQuestion"
        android:layout_alignStart="@+id/twQuestion"
        android:layout_alignEnd="@+id/twQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-145dp"
        android:layout_marginTop="189dp"
        android:layout_marginEnd="-147dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twQuestion"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/twQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="177dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionCounter"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="105dp"
        android:text="@string/question_counter" />

    <include
        layout="@layout/navigation_buttons"
        android:layout_width="396dp"
        android:layout_height="54dp"
        android:layout_below="@+id/lvAnswers"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDuration" />
</RelativeLayout>